{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "outDir": "./dist",
    "baseUrl": "./src",
    "removeComments": true,
    "declaration": true,
    "moduleResolution": "node",
    "lib": ["ESNext"],
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "alwaysStrict": true,
    "noImplicitReturns": true,
    "experimentalDecorators": true,
    "strictNullChecks": false,
    "esModuleInterop": true,
    "incremental": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "noUnusedParameters": true,
    "resolveJsonModule": false,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    "src/**/*.spec.ts",
  ],
  "include": [
    "src/**/*.ts"
  ]
}